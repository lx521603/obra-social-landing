---
const { post } = Astro.props;
---

<article
  class="bg-white rounded-2xl shadow-md overflow-hidden hover:shadow-lg transition"
>
  <a href={`/blog/${post.slug}`} class="block">
    <img src={post.image} alt={post.title} class="w-full h-56 object-cover" />
  </a>

  <div class="p-6 flex flex-col justify-between h-full">
    <div>
      <h2 class="text-xl font-bold text-[#2F855A] mb-2">
        <a href={`/blog/${post.slug}`} class="hover:underline">
          {post.title}
        </a>
      </h2>
      <p class="text-gray-600 text-sm mb-4">{post.description}</p>
    </div>

    <a
      href={`/blog/${post.slug}`}
      class="text-[#2F855A] font-semibold hover:text-[#18643e] transition"
    >
      更多 →
    </a>
  </div>
</article>
