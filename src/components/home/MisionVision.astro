---
import Badge from "./badge.astro";

const values = [
  "持久持妆",
  "自然妆效",
  "成分安全",
  "品质保证",
  "创新科技",
  "用户至上",
  "专业研发",
  "贴心服务",
  "美丽自信",
];
---

<section
  class="relative overflow-hidden bg-gradient-to-r from-pink-500 to-rose-600 text-white px-6 py-16 md:px-20 flex flex-col gap-16"
>
  <!-- 使命和愿景 -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-12 text-center md:text-left">
    <div>
      <h2 class="text-4xl font-bold mb-4">使命</h2>
      <p class="text-lg leading-relaxed font-semibold">
        为每位女性打造持久完美的妆容体验，通过创新的美妆科技让美丽从早到晚始终如一，绽放自信光彩。
      </p>
    </div>

    <div>
      <h2 class="text-4xl font-bold mb-4">愿景</h2>
      <p class="text-lg leading-relaxed font-semibold">
        成为亚洲美妆领域的领导品牌，以卓越的产品品质、专业的色彩科学和对用户美丽需求的深度理解而脱颖而出。
      </p>
    </div>
  </div>

  <!-- 价值观 -->
  <div class="flex flex-col items-center md:items-start gap-6">
    <h2 class="text-2xl font-bold tracking-wide">品牌价值观</h2>
    <div class="flex flex-wrap justify-center md:justify-start gap-3">
      {values.map((value) => <Badge label={value} />)}
    </div>
  </div>
</section>